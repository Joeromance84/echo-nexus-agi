{
  "name": "APK Build - test-apk-project",
  "on": {
    "push": {
      "branches": [
        "main"
      ]
    }
  },
  "jobs": {
    "build": {
      "runs-on": "ubuntu-latest",
      "steps": [
        {
          "uses": "actions/checkout@v3"
        },
        {
          "uses": "actions/setup-python@v4",
          "with": {
            "python-version": "3.11"
          }
        },
        {
          "run": "pip install buildozer"
        },
        {
          "run": "buildozer android debug"
        }
      ]
    }
  }
}