<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8f9fa"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/header_background"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ§  Echo AI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Clear"
            android:textSize="12sp"
            android:background="@drawable/button_secondary"
            android:textColor="#6c757d"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- Conversation Area -->
    <ScrollView
        android:id="@+id/conversation_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/conversation_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <TextView
            android:id="@+id/conversation_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#2c3e50"
            android:lineSpacingExtra="4dp"
            android:fontFamily="sans-serif"
            android:textIsSelectable="true" />

    </ScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/input_background"
        android:padding="8dp">

        <EditText
            android:id="@+id/input_edit_text"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Ask Echo anything..."
            android:textSize="16sp"
            android:textColor="#2c3e50"
            android:textColorHint="#6c757d"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3"
            android:imeOptions="actionSend" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:text="Send"
            android:textSize="12sp"
            android:background="@drawable/button_primary"
            android:textColor="#ffffff"
            android:enabled="false"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Status Bar -->
    <TextView
        android:id="@+id/status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Initializing..."
        android:textSize="12sp"
        android:textColor="#6c757d"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/status_background" />

</LinearLayout>